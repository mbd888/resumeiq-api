# ==========================
# Project Settings
# ==========================
PROJECT_NAME="ResumeIQ API"        # Human-readable project name
VERSION="0.1.0"                    # Semantic version
ENVIRONMENT="development"          # "development" or "production"

# ==========================
# Security (update in production!)
# ==========================
SECRET_KEY="your-super-secret-key-change-this-in-production"  # JWT and session signing key
ACCESS_TOKEN_EXPIRE_MINUTES=30      # Access token validity in minutes
REFRESH_TOKEN_EXPIRE_DAYS=7         # Refresh token validity in days

# ==========================
# Database
# ==========================
DATABASE_URL="postgresql://resumeiq_user:resumeiq_password@localhost:5432/resumeiq"
# Optional components if using separate env vars:
# POSTGRES_USER="resumeiq_user"
# POSTGRES_PASSWORD="resumeiq_password"
# POSTGRES_DB="resumeiq"
# POSTGRES_HOST="localhost"
# POSTGRES_PORT="5432"

# Automatically run Alembic migrations on startup
AUTO_MIGRATE=true  # true for dev; false or unset in production

# ==========================
# Redis (for Celery background tasks)
# ==========================
REDIS_URL="redis://localhost:6379/0"            # Redis instance URL
CELERY_BROKER_URL="redis://localhost:6379/0"   # Celery broker URL
CELERY_RESULT_BACKEND="redis://localhost:6379/0"  # Celery result backend

# ==========================
# CORS Configuration
# ==========================
BACKEND_CORS_ORIGINS="http://localhost:3000,http://localhost:8000"  # Comma-separated list of allowed origins

# ==========================
# File Upload Settings
# ==========================
MAX_UPLOAD_SIZE=10485760  # Maximum file size in bytes (10 MB)
UPLOAD_DIR="uploads"      # Directory to store uploaded files
ALLOWED_EXTENSIONS=".pdf,.txt,.docx"  # Permitted file types

# ==========================
# AI Models
# ==========================
MODEL_CACHE_DIR="models"       # Local cache directory for models
MAX_MODEL_CACHE_SIZE=5         # Maximum number of models to cache
MODEL_INFERENCE_TIMEOUT=30     # Timeout for model inference in seconds

# ==========================
# Email (Optional - for notifications)
# ==========================
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT=587
# SMTP_USER="your-email@gmail.com"
# SMTP_PASSWORD="your-app-password"
# EMAILS_FROM_EMAIL="noreply@resumeiq.com"
# EMAILS_FROM_NAME="ResumeIQ"

# ==========================
# Rate Limiting
# ==========================
RATE_LIMIT_ENABLED=true       # Enable or disable rate limiting
RATE_LIMIT_PER_MINUTE=60      # Requests allowed per minute

# ==========================
# Logging
# ==========================
LOG_LEVEL="INFO"              # Log level: DEBUG, INFO, WARNING, ERROR
LOG_FILE="resumeiq.log"       # Path to log file

# ==========================
# Feature Flags
# ==========================
ENABLE_BULK_PROCESSING=true   # Enable bulk resume processing
ENABLE_AI_ANALYSIS=true       # Enable AI-based resume analysis
ENABLE_JOB_MATCHING=true      # Enable job matching features
ENABLE_ATS_SCORING=true       # Enable ATS compatibility scoring
